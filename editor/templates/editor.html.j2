{% extends "base.html.j2" %}
{% block head %}
    <link rel="stylesheet" href="/static/editor.css">
{% endblock head %}
{% block content %}
    <div id="editorHolder"></div>
    <script>
        let _ed;
        import("/static/Editor.js").then(module => {
            const Editor = module.Editor;
            const editor = new Editor(
                {{ data | tojson }},
                {{ doc_type | tojson }},
                {{ event_info | tojson }},
                {{ config | tojson }},
            );
            if (window.location.origin.includes("localhost")) {
                _ed = editor;
            }
        });
    </script>
{% endblock content %}
